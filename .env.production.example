# ─── VORTEX Production Environment ─────────────────────
# Copy this file to .env.production and fill in your keys

# Google Gemini API key (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here

# VORTEX API authentication key (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
VORTEX_API_KEY=

# Scheduler intervals
COLLECT_INTERVAL_HOURS=6
SOURCE_CHECK_INTERVAL_HOURS=1

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# CORS allowed origins (comma-separated)
# Add your Tailscale IP and local network
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,http://192.168.0.0/24
